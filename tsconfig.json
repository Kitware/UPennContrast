{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "jsxFactory": "h",
    "noEmit": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "vue-router", "vuetify", "vue", "jest", "node", "jquery"],
    "paths": {
      "@/test/*": ["test/*"],
      "@/*": ["src/*"],
      "vue/*": ["node_modules/vue/*"],
      "vuex": ["node_modules/vuex/types/index.d.ts"],
      "vue-router/types/*": ["node_modules/vue-router/types/*"],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
